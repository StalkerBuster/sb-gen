@@ -0,0 +1,7 @@
+#!/bin/bash
+# activate a local WLAN
+#
+# usage: activate-wlan ESSID PASSWORD
+
+/usr/bin/wpa_passphrase "$1" "$2" | sudo tee -a /etc/wpa_supplicant/wpa_supplicant.conf
+sudo /sbin/wpa_cli reconfigure
